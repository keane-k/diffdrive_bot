<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="colors.xacro" />
    <xacro:include filename="inertial_macros.xacro"/>

    <!-- BASE LINK -->

    <!-- Treating center of the two drive wheels as the origin (for DiffDrive robot) -->
    <link name="base_link">
    </link>
    

    <!-- BASE_FOOTPRINT LINK -->
    
    <!-- created just for SLAM, acts as a shadow of base_link on the ground, constrain within x-y plane -->
    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="base_footprint">
    </link>


    <!-- CHASSIS LINK -->

    <!-- Simple box design of 0.3x0.3x0.15(m) -->
    <!-- Configuring joint, use Fixed joint -->
    <!-- Origin to be set just behind base_link by -0.1 in x-axis -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0"/>
    </joint>
    <!-- Configuring link for chassis -->
    <!-- Origin refer to mock-up design -->
    <link name="chassis">
        <visual>
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- Should Gazebo be mising colors, add the following lines under each link tag -->
    <!-- <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo> -->


    <!-- LEFT WHEEL LINK -->

    <!-- Origin refer to mock-up design -->
    <!-- Wheel rotation axis to be about the wheel z-axis, CCW is (+ve) therefore value 1 -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.175 0" rpy="${-pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- Design of wheels at your discretion -->
    <!-- To avoid wheel drift in simulation (causing odom desync between Gazebo and RViz), have collision geometry to be a Sphere instead,
        reduces the contact point to be infinitely small -->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <!-- <cylinder length="0.04" radius="0.05"/> -->
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05" >
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


    <!-- RIGHT WHEEL LINK -->

    <!-- Origin refer to mock-up design -->
    <!-- Wheel rotation axis to be about the wheel z-axis, CCW is (+ve) therefore value -1 -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.175 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <!-- Design of wheels at your discretion -->
    <!-- To avoid wheel drift in simulation (causing odom desync between Gazebo and RViz), have collision geometry to be a Sphere instead,
        reduces the contact point to be infinitely small -->
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <!-- <cylinder length="0.04" radius="0.05"/> -->
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


    <!-- CASTER WHEEL -->

    <!-- Parent link to be chassis -->
    <!-- Have it as a frictionless sphere, have radius match that of the wheels at 0.05m -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.24 0 0" rpy="0 0 0"/>  
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <!-- Configure friction coefficients mu1 and mu2, set to either zero or small number at your choosing -->
    <gazebo reference="caster_wheel">
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>


</robot>